{
    "compilerOptions": {
        "outDir": "./dist", 
        "rootDir": "./src",
        "lib": ["ESNext"],
        "target": "ES2020", 
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "strict": true, 
        "strictNullChecks": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true
    }, 
    "include": ["src/**/*.ts"]
}